function theano_default {
    export THEANO_FLAGS=""
}

function theano_cpu_profile {
    export THEANO_FLAGS="profile=True,profile_memory=True"
    echo "THEANO_FLAGS=$THEANO_FLAGS"
}

function theano_fast {
    export THEANO_FLAGS="optimizer=fast_compile"
    echo "THEANO_FLAGS=$THEANO_FLAGS"
}

